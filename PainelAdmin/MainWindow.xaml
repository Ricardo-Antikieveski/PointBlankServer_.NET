<Window
    x:Class="AuthServer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="1600"
    Height="900"
    Background="#1E1E1E"
    WindowStyle="None"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <!-- ===================== ESTILOS GLOBAIS ===================== -->
    <Window.Resources>

        <!-- Aba selecionada -->
        <Style x:Key="MenuSelected" TargetType="Button">
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Left"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botão -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3A82F7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A9CFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2F6DD1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ProgressBar -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Foreground" Value="#3A82F7"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid SnapsToDevicePixels="True" Height="32">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"/>

                            <Border x:Name="PART_Track"
                                    Background="Transparent"
                                    CornerRadius="8"/>

                            <Border x:Name="PART_Indicator"
                                    Background="{TemplateBinding Foreground}"
                                    CornerRadius="8"
                                    HorizontalAlignment="Left"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>


    <!-- ===================== LAYOUT PRINCIPAL ===================== -->
    <Grid>

        <!-- ===== BARRA SUPERIOR ===== -->
        <Border Background="#222"
                Height="40"
                VerticalAlignment="Top"
                MouseDown="TopBar_MouseDown">

            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Ellipse Width="14" Height="14" Fill="#FFFC605C"
                             Cursor="Hand"
                             MouseDown="CloseButton_Click"/>

                    <Ellipse Width="14" Height="14"
                             Fill="#FF30D158"
                             Margin="8,0,0,0"
                             Cursor="Hand"
                             MouseDown="MinimizeButton_Click"/>
                </StackPanel>

                <Label Grid.Column="1"
                       Content="Auth Server Admin Panel"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="18"/>
            </Grid>
        </Border>


        <!-- ===== DIVISÃO LATERAL + CONTEÚDO ===== -->
        <Grid Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- MENU LATERAL -->
            <Border Background="#262626" Padding="15">
                <StackPanel>
                    <TextBlock Text="Menu"
                               FontSize="20"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <Button Content="Server Log"
                            Style="{StaticResource MenuSelected}"/>

                    <Button Content="Configurações"
                            Height="40"
                            Margin="0,5"
                            Background="#333"
                            Foreground="White"
                            BorderThickness="0"/>

                    <Button Content="Usuários"
                            Height="40"
                            Margin="0,5"
                            Background="#333"
                            Foreground="White"
                            BorderThickness="0"/>
                </StackPanel>
            </Border>


            <!-- ======== ÁREA PRINCIPAL ======== -->
            <Grid Grid.Column="1" Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- AUTH LOG -->
                <Border Grid.Row="0" Background="#2D2D2D" CornerRadius="8" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="AUTH SERVER LOG"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>

                        <RichTextBox x:Name="AuthLogBox"
                                     Grid.Row="1"
                                     IsReadOnly="True"
                                     Background="#1F1F1F"
                                     Foreground="White"
                                     BorderThickness="0"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"/>
                    </Grid>
                </Border>

                <!-- GAME LOG -->
                <Border Grid.Row="1" Background="#2D2D2D" CornerRadius="8" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="GAME SERVER LOG"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>

                        <RichTextBox x:Name="GameLogBox"
                                     Grid.Row="1"
                                     IsReadOnly="True"
                                     Background="#1F1F1F"
                                     Foreground="White"
                                     BorderThickness="0"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"/>
                    </Grid>
                </Border>

                <!-- BATTLE LOG -->
                <Border Grid.Row="2" Background="#2D2D2D" CornerRadius="8" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="BATTLE SERVER LOG"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>

                        <RichTextBox x:Name="BattleLogBox"
                                     Grid.Row="1"
                                     IsReadOnly="True"
                                     Background="#1F1F1F"
                                     Foreground="White"
                                     BorderThickness="0"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"/>
                    </Grid>
                </Border>


                <!-- PAINEL DE COMANDO -->
                <Border Grid.Row="3"
                        Background="#222"
                        CornerRadius="8"
                        Padding="12">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Comando:"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                        <TextBox Grid.Column="1"
                                 Height="30"
                                 Margin="10,0"
                                 Background="#1E1E1E"
                                 Foreground="White"
                                 BorderBrush="#444"
                                 FontFamily="Consolas"/>

                        <Button Grid.Column="2"
                                Content="Executar"
                                Style="{StaticResource ModernButton}"
                                Width="140"/>

                        <ProgressBar Grid.Column="3"
                                     Style="{StaticResource ModernProgressBar}"
                                     Minimum="0"
                                     Maximum="100"
                                     Value="0"/>
                    </Grid>
                </Border>

            </Grid>
        </Grid>
    </Grid>
</Window>
